
<div class="container">
   


<h1> Eat - Da - Burger </h1>

<h2 class="left"> New created burgers </h2>

<ul class="left">
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Eat</button>
        </form>

      </li> 
    {{/unless}}
  {{/each}}
</ul>

<h2 class="right"> Devoured burgers </h2>

<ul class="right">
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}
        
        <form action="{{this.id}}?_method=PUT" method="POST">
          <input  type="hidden" name="devoured" value="false">
          <button type="submit">Put Back</button>
        </form>

      </li>
    {{/if}}
  {{/each}}
</ul>

<div style="clear:both;"></div>
<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input class="new-item" type="text" id="ca" name="burger_name">
<!--


  </div>

  <button type="submit">Submit</button>
</form>
